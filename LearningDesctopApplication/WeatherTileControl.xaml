<UserControl x:Class="LearningDesctopApplication.WeatherTileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningDesctopApplication"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="#DDDDDD" 
            BorderThickness="1" 
            CornerRadius="8"
            Background="White">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <TextBlock x:Name="DateText" 
                         FontWeight="SemiBold"
                         FontSize="14"/>
                <!--<TextBlock x:Name="TempText" 
                         TextAlignment="Right"
                         FontWeight="SemiBold"
                         FontSize="14"
                         DockPanel.Dock="Right">
                    <Run x:Name="Temperature"/>
                    <Run Text="°C"/>
                </TextBlock>-->
            </DockPanel>

            <DockPanel Grid.Row="1">
                <TextBlock x:Name="TempText" 
                         TextAlignment="Right"
                         FontWeight="SemiBold"
                         FontSize="14"
                         DockPanel.Dock="Right">
                    <Run x:Name="Temperature"/>
                    <Run Text="°C"/>
                </TextBlock>
            </DockPanel>
            


            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="WeatherIcon"
                       Width="80" 
                       Height="80"
                       Margin="0,0,12,0"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock x:Name="SummaryText"
                         Grid.Column="1"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center"
                         Foreground="#666666"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
