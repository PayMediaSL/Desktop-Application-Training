<Window x:Class="LearningDesctopApplication.CDM.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningDesctopApplication.CDM"
        mc:Ignorable="d"
        Title="CDM Welcome" Height="600" Width="800" 
        WindowStyle="None" 
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="LanguageButton" TargetType="Button">
            <Setter Property="Width" Value="320"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1a73e8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="35"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1557b0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#141e30" Offset="0"/>
                <GradientStop Color="#243b55" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button Content="✕" 
                Click="Exit_Click"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Width="40" 
                Height="40" 
                Background="Transparent"
                Foreground="#FF5252"
                FontSize="20"
                BorderThickness="0"
                Cursor="Hand"
                Margin="20">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FF0000"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" Margin="0,0,0,30">

                <Image x:Name="imgLogo" Height="139" Width="359" Source="/CDM/people.png"/>

               
            </StackPanel>

            
            <TextBlock 
                Text="Welcome to CDM" 
                       Foreground="White" 
                      FontSize="42" 
                       FontWeight="Bold" 
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock TextAlignment="Center" 
                       Margin="0,0,0,40">
                <Run Text="කරුණාකර ඔබේ භාෂාව තෝරන්න" Foreground="#E0E0E0" FontSize="24"/>
                <LineBreak/>
                <Run Text="உங்கள் மொழியை தேர்ந்தெடுக்கவும்" Foreground="#E0E0E0" FontSize="24"/>
                <LineBreak/>
                <Run Text="Please select your language" Foreground="#E0E0E0" FontSize="24"/>
            </TextBlock>

            <Button Name="btnSinhala" Click="Language_Selected" Content="සිංහල" Style="{StaticResource LanguageButton}"/>
            <Button Name="btnTamil" Click="Language_Selected" Content="தமிழ்" Style="{StaticResource LanguageButton}"/>
            <Button Name="btnEnglish" Click="Language_Selected" Content="English" Style="{StaticResource LanguageButton}"/>
        </StackPanel>
    </Grid>
</Window>