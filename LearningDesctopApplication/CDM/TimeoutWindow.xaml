<Window x:Class="LearningDesctopApplication.CDM.TimeoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningDesctopApplication.CDM"
        mc:Ignorable="d"
        Title="Timeout" Height="250" Width="450"
        WindowStartupLocation="CenterOwner" 
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">

    <Window.Resources>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22.5"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" 
            Background="#FFFFFF"
            BorderThickness="1"
            BorderBrush="#E0E0E0"
            >

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Warning Icon -->
            <Path Grid.Row="0"
                  Data="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14H13V10M11,16V18H13V16"
                  Fill="#FFA726"
                  Width="40"
                  Height="40"
                  Stretch="Uniform"
                  Margin="0,0,0,15"/>

            <!-- Message -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Session Timeout Warning !" 
                          FontSize="22" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="#424242"/>

                <TextBlock Text="Do you need more time to proceed?" 
                          FontSize="16"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"
                          Foreground="#757575"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">

                <Button Content="Yes" 
                        Style="{StaticResource DialogButton}"
                        Background="#2196F3"
                        Foreground="White"
                        Click="Yes_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                        ShadowDepth="1" 
                                        Opacity="0.2"/>
                    </Button.Effect>
                </Button>

                <Button Content="No" 
                        Style="{StaticResource DialogButton}"
                        Background="#FF5252"
                        Foreground="White"
                        Click="No_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                        ShadowDepth="1" 
                                        Opacity="0.2"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>