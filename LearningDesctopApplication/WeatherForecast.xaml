<Window x:Class="LearningDesctopApplication.WeatherForecast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningDesctopApplication"
        mc:Ignorable="d"
        Title="WeatherForecast" Height="519" Width="670">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,0,0,1" 
                Padding="0,0,0,15" 
                Margin="0,0,0,15" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="From:" 
                         Grid.Column="0" 
                         VerticalAlignment="Center" 
                         Margin="0,0,10,0"/>
                <DatePicker x:Name="datePickerFromDate" 
                          Grid.Column="1"/>

                <TextBlock Text="To:" 
                         Grid.Column="2" 
                         VerticalAlignment="Center" 
                         Margin="20,0,10,0"/>
                <DatePicker x:Name="datePickerToDate" 
                          Grid.Column="3"/>

                <Button x:Name="btnGetWeather" 
                        Content=" Get Weather " 
                        Grid.Column="4" 
                        Margin="20,0,0,0" 
                        Padding="15,5"
                        Background="#007ACC"
                        Foreground="White"
                        Click="GetWeatherBtn_Click"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
            <WrapPanel x:Name="wrapPanelWeather"/>
        </ScrollViewer>
    </Grid>
</Window>
