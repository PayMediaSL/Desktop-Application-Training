<Window x:Class="LearningDesctopApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningDesctopApplication"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow" WindowState="Normal"
        Title="Calculator" Height="348" Width="292">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>



        <Border CornerRadius="10" Background="#FF2D2D30" Padding="10" Grid.Row="0">
            <Grid>
                <TextBox Name="txtDisplay" FontSize="24" TextAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="White" Margin="17,0,0,0" IsReadOnly="True" Height="30" VerticalAlignment="Center"/>

                <Button x:Name="btnClear" Click="btnClear_Click" Content="C" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="-0.915,0.515" Margin="2,0,0,0"/>


            </Grid>
        </Border>
        <Grid Margin="0,52,0,0" Grid.RowSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btn7" Click="btn7_Click" Content="7" Grid.Row="0" Grid.Column="0" FontSize="18" />
            <Button x:Name="btn8" Click="btn8_Click" Content="8" Grid.Row="0" Grid.Column="1" FontSize="18"/>
            <Button x:Name="btn9" Click="btn9_Click" Content="9" Grid.Row="0" Grid.Column="2" FontSize="18"/>
            <Button x:Name="btnDevide" Click="btnDevide_Click" Content="/" Grid.Row="0" Grid.Column="3" FontSize="18"/>

            <Button x:Name="btn4" Click="btn4_Click" Content="4" Grid.Row="1" Grid.Column="0" FontSize="18"/>
            <Button x:Name="btn5" Click="btn5_Click" Content="5" Grid.Row="1" Grid.Column="1" FontSize="18"/>
            <Button x:Name="btn6" Click="btn6_Click" Content="6" Grid.Row="1" Grid.Column="2" FontSize="18"/>
            <Button x:Name="btnMultiple" Click="btnMultiple_Click" Content="*" Grid.Row="1" Grid.Column="3" FontSize="18"/>

            <Button x:Name="btn1" Click="btn1_Click" Content="1" Grid.Row="2" Grid.Column="0" FontSize="18"/>
            <Button x:Name="btn2" Click="btn2_Click" Content="2" Grid.Row="2" Grid.Column="1" FontSize="18"/>
            <Button x:Name="btn3" Click="btn3_Click" Content="3" Grid.Row="2" Grid.Column="2" FontSize="18"/>
            <Button x:Name="btnReduce" Click="btnReduce_Click" Content="-" Grid.Row="2" Grid.Column="3" FontSize="18"/>

            <Button x:Name="btn0" Click="btn0_Click_1" Content="0" Grid.Row="3" Grid.Column="0" FontSize="18"/>
            <Button x:Name="btnDot" Click="btnDot_Click" Content="." Grid.Row="3" Grid.Column="1" FontSize="18"/>
            <Button x:Name="btnSum" Click="btnSum_Click" Content="=" Grid.Row="3" Grid.Column="2" FontSize="18" Background="OrangeRed"/>
            <Button x:Name="btnPlus" Click="btnPlus_Click" Content="+" Grid.Row="3" Grid.Column="3" FontSize="18"/>

        </Grid>
    </Grid>
</Window>
