<Window x:Class="LearningDesctopApplication.ReceiptGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cash Deposit Form" Height="361" Width="381">
    <Grid Margin="0,0,0,-65">
        <StackPanel Margin="20,20,20,21">


            <Image x:Name="imgLogo" Source="https://ceylontoday.lk/wp-content/uploads/2023/01/BOC-copy.jpg" Height="51" Width="87" Visibility="Visible" Stretch="UniformToFill" VerticalAlignment="Center"/>

            <TextBlock Text="Account Number:"/>
            <TextBox x:Name="txtAccountNumber" Margin="0,0,0,5"/>

            <TextBlock Text="Account Holder Name:"/>
            <TextBox x:Name="txtAccountHolder" Margin="0,0,0,5"/>

            <TextBlock Text="Depositor Name:"/>
            <TextBox x:Name="txtDepositorName" Margin="0,0,0,5"/>

            <TextBlock Text="Contact Number:"/>
            <TextBox x:Name="txtContactNumber" Margin="0,0,0,5"/>

            <TextBlock Text="Deposit Amount:"/>
            <TextBox x:Name="txtDepositAmount" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content=" Generate Receipt " Click="Generate_Click" Width="160" Margin="5"/>
                <Button Content="Reset" Click="Reset_Click" Width="160" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
