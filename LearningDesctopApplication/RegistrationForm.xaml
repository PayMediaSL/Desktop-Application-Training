<Window x:Class="LearningDesctopApplication.RegistrationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration Form"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Height="500" Width="320"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Create an Account" 
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="10,10,10,0" Height="381" VerticalAlignment="Top">
            <Label Content="NIC:" FontWeight="Bold"/>
            <TextBox x:Name="txtNIC" Height="30" TextChanged="txtNIC_TextChanged"
                     Padding="5" BorderThickness="1" PreviewTextInput="txtNIC_PreviewTextInput"
                     BorderBrush="#ccc" Background="White"
                    />

            <Label Content="Name:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox x:Name="txtName" Height="30" 
                     Padding="5" BorderThickness="1"
                     BorderBrush="#ccc" Background="White"
                     />

            <Label Content="Email:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox x:Name="txtEmail" Height="30" TextChanged="txtEmail_TextChanged"
                     Padding="5" BorderThickness="1" PreviewTextInput="txtEmail_PreviewTextInput"
                     BorderBrush="#ccc" Background="White"
                    />

            <Label Content="Password:" FontWeight="Bold" Margin="0,5,0,0"/>
            <PasswordBox x:Name="txtPassword" Height="30"
                         Padding="5" BorderThickness="1"
                         BorderBrush="#ccc" Background="White"
                         />

            <Label Content="Confirm Password:" FontWeight="Bold" Margin="0,5,0,0"/>
            <PasswordBox x:Name="txtCPassword" Height="30"
             Padding="5" BorderThickness="1"
             BorderBrush="#ccc" Background="White"
             />
           

            <Button Content="Register" Click="Register_Click"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" Padding="10,5"
                    Width="200" Height="35" Cursor="Hand"
                    BorderThickness="0" 
                    Margin="10,15,10,0"
                    HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Width" Value="200"/>
                        <Setter Property="Height" Value="35"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Margin" Value="10,15,10,0"/>
                        <Setter Property="BorderThickness" Value="0"/>

                        <Setter Property="Padding" Value="10,5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

           
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Already have an account?" 
                           FontSize="12" VerticalAlignment="Center"/>
                <Button Content="Login" Click="Login_Click"
                        Foreground="#2196F3" Background="Transparent"
                        BorderThickness="0" Cursor="Hand"
                        FontSize="12" FontWeight="Bold"
                        Padding="0,0,0,0" Margin="5,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#2196F3"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="5,0,0,0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#1E88E5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>

</Window>
    
